{{!-- more handlebars --}}
{{#each allCurBlogs as |curblog|}}
<div class="users-blog-posts new-blog">
    <div class="blog-head">
        <div class="blog-title">
            <h2> Title - {{blog title}} </h2>
        </div>
        <div class="blog-user">
            <p class="blog-user"> Posted by - {{user.username}}</p>
            <p> Created on - {{format_date date_created}}</p>
        </div>
    </div>
    <div class="blog-message">
        <p class="blog-mesg"> {{blog_content}} </p>
    </div>
</div>
{{each}}